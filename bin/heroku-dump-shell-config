#!/usr/bin/env ruby
require 'json'

require_relative '../lib/heroku_client'

def main(argv: ARGV)
  prog = File.basename($PROGRAM_NAME)

  argv.each do |arg|
    if arg =~ /-h|--help|help/
      show_usage
      return 0
    end
  end

  if argv.length < 1
    show_usage
    return 1
  end

  unless ENV.key?('HEROKU_API_KEY')
    $stderr.puts 'Missing $HEROKU_API_KEY'
    return 2
  end

  out = $stdout
  outname = argv[1]
  unless outname.nil?
    $stderr.puts "#{prog}: writing to #{outname.inspect}"
    out = File.open(outname, 'w')
  end

  heroku = HerokuClient.new(api_key: ENV.fetch('HEROKU_API_KEY'))

  dumped = heroku.get("/apps/#{argv.fetch(0)}/config-vars").map do |key, value|
    "export #{key.upcase}=#{value.to_s.inspect}"
  end

  dumped.sort.each do |entry|
    out.puts entry
  end

  0
end

def show_usage
  $stdout.puts <<~USAGE
    Usage: #{prog} <app>

    Dump Heroku config in shell format for app named <app>

    #{prog} lovely-lil-app
  USAGE
end

def prog
  @prog ||= File.basename($PROGRAM_NAME)
end

exit(main) if $PROGRAM_NAME == __FILE__
